                    </svg>
                </a>
                <a >
                    <img src="https://www.sacvang.com/data/01/logo-xe-dap-03.jpg" style="width: 150px">
                </a>
                    <c:choose>
                        <c:when test="${sessionScope.user eq null}">
                            <a class="btn btn-primary" href="login" role="button" style="border-radius: 10px;">Login</a>
                        </c:when>
                        <c:otherwise>
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown" >
                            <c:choose>
                                <c:when test="${sessionScope.user.rule eq 1}">
                                    <button type="button" class="btn btn-primary" style="background-color: red;border-radius: 10px;" onclick="sendRedirect('cart')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                                        </svg>
                                        Cart <div class="badge text-wrap" style="width: 5px;background-color: whitesmoke;color: black">
                                            ${requestScope.countc}
